<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :event_title %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.datetime_select :date, id: :event_date %>
  </div>

  <div class="field">
    <%= form.label :occasion %>
    <%= form.text_field :occasion, id: :event_occasion %>
  </div>

  <div class="field">
    <%= form.label :price_limit %>
    <%= form.number_field :price_limit, id: :event_price_limit %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
